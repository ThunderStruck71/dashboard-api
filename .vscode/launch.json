{
    "version": "0.2.0",
    "configurations": [
		{
			"name": "tsx",
			"type": "node",
			"request": "launch",
			"program": "${file}",
			"runtimeExecutable": "tsx",
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"skipFiles": [
				"<node_internals>/**",
				"${workspaceFolder}/node_modules/**"
			]
		},
		{
			"name": "Attach to process",
			"type": "node",
			"request": "attach",
			"port": 9229,
			"skipFiles": [
				"<node_internals>/**",
				"${workspaceFolder}/node_modules/**"
			]
		}
    ]
}